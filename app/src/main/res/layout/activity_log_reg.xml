<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luseen.vanik.luseenapp.Activities.LogRegActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/luseen" />

    <android.support.design.widget.TabLayout
        android:id="@+id/reg_log_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/image_logo"
        android:layout_marginTop="16dp"
        app:tabBackground="@drawable/selected_tab_background"
        app:tabMode="scrollable" />

    <android.support.v4.view.ViewPager
        android:id="@+id/reg_log_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reg_log_tabs" />

</RelativeLayout>