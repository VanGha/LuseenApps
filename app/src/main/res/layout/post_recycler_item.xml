<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/info_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/user_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                app:siShape="@drawable/rounded_rectangle_photo"
                app:siSquare="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_photo"
                android:layout_toRightOf="@id/user_photo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/user_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </LinearLayout>

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_photo"
                android:layout_margin="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/cmnt_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_text"
                android:gravity="start"
                android:text="@string/comments" />

            <TextView
                android:id="@+id/h_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cmnt_line"
                android:layout_margin="5dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/comments_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h_line"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comments_field"
                android:orientation="horizontal">

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/sender_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    app:siShape="@drawable/rounded_rectangle_photo"
                    app:siSquare="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/small_stroke">

                    <Button
                        android:id="@+id/comment_send_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/comment_send_button"
                        android:drawableLeft="@drawable/ic_menu_send"
                        android:drawableStart="@drawable/ic_menu_send" />

                    <EditText
                        android:id="@+id/comment_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@id/comment_send_button"
                        android:layout_toStartOf="@id/comment_send_button" />

                </RelativeLayout>

            </LinearLayout>


            <ProgressBar
                android:id="@+id/load_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/comments_field"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>