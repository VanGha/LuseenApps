<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/info_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/user_image"
                android:layout_toRightOf="@id/user_image"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_image"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_below="@id/info_text"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/comments_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_text"
                android:background="@color/transparent_gray"
                android:orientation="vertical">

            </LinearLayout>

            <ProgressBar
                android:id="@+id/load_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/comments_field"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/sender_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/comments_field"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/comment_send_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/comments_field"
                android:layout_margin="5dp"
                android:background="@drawable/comment_send_button"
                android:drawableLeft="@drawable/ic_menu_send"
                android:drawableStart="@drawable/ic_menu_send" />

            <EditText
                android:id="@+id/comment_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comments_field"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/sender_image"
                android:layout_toLeftOf="@id/comment_send_button"
                android:layout_toRightOf="@id/sender_image"
                android:layout_toStartOf="@id/comment_send_button" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>